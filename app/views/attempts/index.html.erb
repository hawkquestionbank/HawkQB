<h1> <%=@display_category.capitalize %> questions in course: <%=@course.title %> </h1>

<table class="table table-hover table-striped">
  <thead>
  <tr>
    <th scope="col">Question title</th>
    <th scope="col">Type</th>
    <th scope="col">Updated</th>
    <th scope="col">Action(s)</th>
  </tr>
  </thead>
  <tbody>
    <% @questions.each do |question| %>
      <tr class="table-active">
        <th scope="row"><%= question.title %>></th>
        <td><%= question.type %></td>
        <td><%= time_ago_in_words(question.updated_at) %></td>
        <td><%= link_to 'Take', new_attempt_path(:course_id=>@course.id, :question_id=>question.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>