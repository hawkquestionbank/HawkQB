<h1>Manage Users</h1>

<table class="table table-hover">
  <thead>
  <tr>
    <th scope="col">User Name</th>
    <th scope="col">Role</th>
    <th scope="col">Actions</th>
  </thead>

  <% @users.each do |user| %>
    <tr class="table-default">
      <th scope="row"> <%= user.full_name %></td>
      <td> <%= user.role %></td>
      <td> <%= link_to 'Edit', edit_user_path(user)%></td>
    </tr>
  <% end %>
</table>