<h1>Questions</h1>

<table class="table table-hover table-striped">
  <thead>
  <tr>
    <th scope="col">Title</th>
    <th scope="col">Creator</th>
    <th scope="col">Used in course</th>
    <th scope="col">Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @questions.each do |question| %>
    <% course = question.course %>
    <tr class="table-active">
      <td><%= link_to question.title, sti_question_path(question.type, question) %> <%=type_as_badge(question) %></td>
      <td><%= question.creator.full_name %></td>
      <td><%= course.nil? ? "None" : course.title %> </td>
      <td><%= link_to 'Edit', sti_question_path(question.type, question, :edit) %></td>
      <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<hr>
<div class="row">
  <div class="col-lg-4">
    <ul class="list-group">
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= link_to "See All (Multiple Choice Questions)", sti_question_path("multiple_choice") %>
        <span class="badge badge-primary badge-pill"><%= @quetion_type_counts["MultipleChoice"] %></span>
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= link_to "See All (Multiple Select Questions)", sti_question_path("multiple_select") %>
        <span class="badge badge-primary badge-pill"><%= @quetion_type_counts["MultipleSelect"] %></span>
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= link_to 'See All Questions', sti_question_path %>
      </li>
    </ul>
  </div>

  <div class="col-lg-4">
    <ul class="list-group">
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= link_to 'New Multiple Choice Question', sti_question_path("multiple_choice", nil, :new), method: :get %>

      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= link_to 'New Multiple Select Question', sti_question_path("multiple_select", nil, :new), method: :get %>

      </li>
    </ul>
  </div>
</div>

<br>
