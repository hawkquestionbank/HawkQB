<h1> Micro-credentials for course <%= @course.title %> </h1>

<table class="table table-hover">
  <thead>
    <tr>
        <th scope="col">Identifier</th>
        <th scope="col">Name</th>
        <th scope="col">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @micro_credentials.each do |micro_credential| %>
      <tr class="table-primary">
        <th scope="row"> <%= micro_credential.identifier %></th>
        <td><%= micro_credential.title %></td>

        <td><%= link_to "view", micro_credential, method: :get, class: "text-white" %></td>
      </tr>
    <% end %>

  </tbody>
</table>